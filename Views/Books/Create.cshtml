@model Book

@{
    ViewData["Title"] = "Add New Book";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Book Information</h1>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-lg-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Add Book Information</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                           
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="row">

                                        <div class="col-md-5">
                                            <label asp-for="Title">Title:</label>
                                            <input asp-for="Title" class="form-control" placeholder="Please enter title">
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-5 offset-md-1">
                                            <label asp-for="Author">Author:</label>
                                            <input asp-for="Author" class="form-control" placeholder="Please enter Author name">
                                            <span asp-validation-for="Author" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">

                                        <div class="col-md-5">
                                            <label asp-for="PublicationYear">Publication Year:</label>
                                            <input asp-for="PublicationYear" class="form-control" placeholder="Please enter Publication Year">
                                            <span asp-validation-for="PublicationYear" class="text-danger"></span>
                                        </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" value="Create" class="btn btn-outline-primary">Submit</button>
                                    <a asp-area="" asp-controller="Books" asp-action="Index" class="btn btn-outline-secondary" role="button">Back</a>

                                </div>
                            </div>
                        </form>
                        <!--FORM ENDS HERE-->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>
