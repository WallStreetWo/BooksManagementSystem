@model BooksManagementSystem.Models.Borrowing

@{
    ViewData["Title"] = "Create New Borrower";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Borrowing Information</h1>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-lg-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Add Borrowing Information</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                           
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="row">

                                        <div class="col-md-5">
                                            <label asp-for="BookID" class="control-label"></label>
                                            <select asp-for="BookID" class="form-control" asp-items="ViewBag.Books"></select>
                                            <span asp-validation-for="BookID" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-5 offset-md-1">
                                            <label asp-for="MemberID" class="control-label"></label>
                                            <select asp-for="MemberID" class="form-control" asp-items="ViewBag.Members"></select>
                                            <span asp-validation-for="MemberID" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">

                                        <div class="col-md-5">
                                            <label asp-for="BorrowDate" class="control-label"></label>
                                            <input asp-for="BorrowDate" class="form-control" />
                                            <span asp-validation-for="BorrowDate" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-5 offset-md-1">
                                            <label asp-for="ReturnDate" class="control-label"></label>
                                            <input asp-for="ReturnDate" class="form-control" />
                                            <span asp-validation-for="ReturnDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" value="Create" class="btn btn-outline-primary">Submit</button>
                                    <a asp-area="" asp-controller="Borrowings" asp-action="Index" class="btn btn-outline-secondary" role="button">Back</a>

                                </div>
                            </div>
                        </form>
                        <!--FORM ENDS HERE-->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
